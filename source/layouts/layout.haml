!!!5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{name: :viewport}
    %title
      - if content_for?(:title)
        = yield_content(:title)

    = stylesheet_link_tag 'site'
    = javascript_include_tag 'site'

    %script{src: "https://code.jquery.com/jquery-3.3.1.slim.min.js",
      integrity: "sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=",
      crossorigin: "anonymous"}

    %script{src: "https://cdn.jsdelivr.net/npm/moment@2.22.2/moment.min.js",
      integrity: "sha384-BmqX+J1qYayHgEkw+9Idtrl0B0TorHRQW9/iwTxk1samHGPmEI7ovnGvy4SbWxwa",
      crossorigin: "anonymous"}

    :javascript
      console.info('Last updated at #{Time.now.strftime("%m/%d/%Y %H:%M")}')


  %body
    %header
      %nav
        %ul
          %li
            = link_to 'Main', '/'
          %li
            = link_to 'Location', '/location'
          %li
            = link_to 'Pictures', '/pictures'

    = yield
